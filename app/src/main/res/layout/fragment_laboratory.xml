<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
<variable name="listener" type="com.example.roy.recycleviewtest.fragment.LaboratoryFragment.Listener"/>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_type_switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_s"
                android:onClick="@{()->listener.toTypeSwitcher()}"
                android:text="类型转换器" />

            <Button
                android:id="@+id/btn_pager_indication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_s"
                android:onClick="@{()->listener.toPagerIndication()}"
                android:text="页面指示器" />

            <Button
                android:id="@+id/btn_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_s"
                android:onClick="@{()->listener.toCountdown()}"
                android:text="倒计时" />

            <Button
                android:id="@+id/btn_crawler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_s"
                android:onClick="@{()->listener.toCrawler()}"
                android:text="爬虫" />

            <Button
                android:id="@+id/btn_lottie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_s"
                android:onClick="@{()->listener.toLottieMotion()}"
                android:text="LOTTIE动画" />
        </LinearLayout>
    </ScrollView>
</layout>