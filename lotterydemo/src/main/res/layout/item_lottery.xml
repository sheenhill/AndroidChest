<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List" />

        <variable
            name="data"
            type="List&lt;String>" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@{data[0]??`xxxx-xx-xx`}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020-09-22" />

            <androidx.cardview.widget.CardView
                android:id="@+id/info_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_8"
                app:contentPaddingBottom="@dimen/dp_2"
                app:contentPaddingLeft="@dimen/dp_4"
                app:contentPaddingRight="@dimen/dp_4"
                app:contentPaddingTop="@dimen/dp_2"
                app:layout_constraintBottom_toBottomOf="@+id/info_time"
                app:layout_constraintStart_toEndOf="@+id/info_time"
                app:layout_constraintTop_toTopOf="@+id/info_time">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:text="@{data[9]??`:)`}"
                    tools:text="双色球" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/info_issue_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_8"
                app:contentPaddingBottom="@dimen/dp_2"
                app:contentPaddingLeft="@dimen/dp_4"
                app:contentPaddingRight="@dimen/dp_4"
                app:contentPaddingTop="@dimen/dp_2"
                app:layout_constraintBottom_toBottomOf="@+id/info_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/info_time">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data[1]??`xxxx-xx-xx`}"
                    android:textColor="#333"
                    tools:text="27003" />
            </androidx.cardview.widget.CardView>

            <!--            fixme: 加边距的cardView抽离属性，或者自定义view  -->
            <androidx.cardview.widget.CardView
                android:id="@+id/num_red_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/dp_16"
                app:cardBackgroundColor="@color/lottery_blue"
                app:cardCornerRadius="@dimen/dp_16"
                app:cardElevation="@dimen/dp_8"
                app:contentPadding="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/num_red_2"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/info_time">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:text="@{data[2]??`xxxx-xx-xx`}"
                    android:textColor="@color/lottery_blue"
                    tools:text="03" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/num_red_2"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data[3]??`xxxx-xx-xx`}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_1"
                app:layout_constraintEnd_toStartOf="@+id/num_red_3"
                app:layout_constraintStart_toEndOf="@+id/num_red_1"
                app:layout_constraintTop_toTopOf="@+id/num_red_1"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_3"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data[4]??`xxxx-xx-xx`}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_2"
                app:layout_constraintEnd_toStartOf="@+id/num_red_4"
                app:layout_constraintStart_toEndOf="@+id/num_red_2"
                app:layout_constraintTop_toTopOf="@+id/num_red_2"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_4"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data[5]??`xxxx-xx-xx`}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_3"
                app:layout_constraintEnd_toStartOf="@+id/num_red_5"
                app:layout_constraintStart_toEndOf="@+id/num_red_3"
                app:layout_constraintTop_toTopOf="@+id/num_red_3"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_5"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data[6]??`xxxx-xx-xx`}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_4"
                app:layout_constraintEnd_toStartOf="@+id/num_red_6"
                app:layout_constraintStart_toEndOf="@+id/num_red_4"
                app:layout_constraintTop_toTopOf="@+id/num_red_4"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_6"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data[7]??`xxxx-xx-xx`}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_5"
                app:layout_constraintEnd_toEndOf="@+id/gl"
                app:layout_constraintStart_toEndOf="@+id/num_red_5"
                app:layout_constraintTop_toTopOf="@+id/num_red_5"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_7"
                style="@style/AppTheme.RedRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data[8]??`xxxx-xx-xx`}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gl"
                app:layout_constraintTop_toTopOf="@+id/num_red_6"
                tools:text="07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>