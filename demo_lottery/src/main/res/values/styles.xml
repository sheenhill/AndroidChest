<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--no actionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--    彩票字体样式-灰色圆环，蓝字-->
    <style name="AppTheme.GrayRingBlueText">
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/lottery_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_ring_gray</item>
    </style>
    <!--    彩票字体样式-灰色圆环，红字-->
    <style name="AppTheme.GrayRingRedText">
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textColor">@color/lottery_red</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_ring_gray</item>
    </style>
<!--    彩票圆环-蓝-->
    <style name="AppTheme.BlueRing">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#39f</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_ring_blue</item>
    </style>
<!--    彩票圆环-红-->
    <style name="AppTheme.RedRing">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#f54646</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_ring_red</item>
    </style>
    <style name="AppTheme.CardRedRing">
        <item name="cardBackgroundColor">@color/lottery_red</item>
    </style>

<!--    <style name="AppTheme.CardBorder">-->
<!--        <item name="cardBackgroundColor"></item>-->
<!--    </style>-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/white</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:layout_centerInParent">true</item>

    </style>


</resources>