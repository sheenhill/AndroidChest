<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.sheenhill.demo_lottery.LotteryBean" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginHorizontal="@dimen/dp_8">


            <TextView
                android:id="@+id/info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@{data.lottery_time}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020-09-22" />

            <androidx.cardview.widget.CardView
                android:id="@+id/info_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_8"
                app:contentPaddingBottom="@dimen/dp_2"
                app:contentPaddingLeft="@dimen/dp_4"
                app:contentPaddingRight="@dimen/dp_4"
                app:contentPaddingTop="@dimen/dp_2"
                app:layout_constraintBottom_toBottomOf="@+id/info_time"
                app:layout_constraintStart_toEndOf="@+id/info_time"
                app:layout_constraintTop_toTopOf="@+id/info_time">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.lottery_type}"
                    android:textColor="#333"
                    tools:text="双色球" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/info_issue_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_24"
                app:contentPaddingBottom="@dimen/dp_2"
                app:contentPaddingLeft="@dimen/dp_4"
                app:contentPaddingRight="@dimen/dp_4"
                app:contentPaddingTop="@dimen/dp_2"
                app:layout_constraintBottom_toBottomOf="@+id/info_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/info_time">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.issue_number}"
                    android:textColor="#333"
                    tools:text="27003" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/num_red_1"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@{data.front_num[0]}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/num_red_2"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/info_time"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_2"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data.front_num[1]}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_1"
                app:layout_constraintEnd_toStartOf="@+id/num_red_3"
                app:layout_constraintStart_toEndOf="@+id/num_red_1"
                app:layout_constraintTop_toTopOf="@+id/num_red_1"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_3"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data.front_num[2]}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_2"
                app:layout_constraintEnd_toStartOf="@+id/num_red_4"
                app:layout_constraintStart_toEndOf="@+id/num_red_2"
                app:layout_constraintTop_toTopOf="@+id/num_red_2"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_4"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data.front_num[3]}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_3"
                app:layout_constraintEnd_toStartOf="@+id/num_red_5"
                app:layout_constraintStart_toEndOf="@+id/num_red_3"
                app:layout_constraintTop_toTopOf="@+id/num_red_3"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_5"
                style="@style/AppTheme.BlueRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data.front_num[4]}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_4"
                app:layout_constraintEnd_toEndOf="@+id/guideline"
                app:layout_constraintStart_toEndOf="@id/num_red_4"
                app:layout_constraintTop_toTopOf="@+id/num_red_4"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_6"
                style="@style/AppTheme.RedRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data.back_num[0]}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_5"
                app:layout_constraintEnd_toStartOf="@+id/num_red_7"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/num_red_5"
                app:layout_constraintVertical_bias="0.0"
                tools:text="03" />

            <TextView
                android:id="@+id/num_red_7"
                style="@style/AppTheme.RedRing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@{data.back_num[1]}"
                app:layout_constraintBottom_toBottomOf="@+id/num_red_6"
                app:layout_constraintEnd_toEndOf="@id/info_issue_num"
                app:layout_constraintTop_toTopOf="@+id/num_red_6"
                tools:text="07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>